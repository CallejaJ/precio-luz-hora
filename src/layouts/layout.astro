---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Consulta el precio de la luz hoy en España. Datos actualizados hora a hora sin publicidad.",
} = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://precioluzhora.online').href} />
    <!-- Tipografía Premium -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col mesh-gradient">
    <nav
      class="glass sticky top-4 z-50 mx-4 mt-4 rounded-3xl max-w-[calc(100vw-2rem)]"
    >
      <div
        class="max-w-5xl mx-auto px-6 h-16 flex items-center justify-between"
      >
        <a href="/" class="flex items-center gap-2 group">
          <div
            class="p-1.5 bg-amber-100 rounded-lg group-hover:scale-110 group-hover:rotate-12 transition-all duration-500"
          >
            <img src="/favicon.svg" alt="Logo" class="w-6 h-6" />
          </div>
          <span
            class="text-xl font-black text-slate-900 tracking-tight font-['Outfit']"
          >
            Precio<span class="text-primary italic">Luz</span>Hora<span
              class="text-slate-400 text-sm font-medium">.online</span
            >
          </span>
        </a>
        <div class="hidden md:flex gap-8 text-sm font-bold text-slate-600">
          <a
            href="#precios"
            class="hover:text-primary transition-colors relative group py-2"
          >
            Precios
            <span
              class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
          <a
            href="#ahorro"
            class="hover:text-primary transition-colors relative group py-2"
          >
            Ahorro
            <span
              class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
        </div>
      </div>
    </nav>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-slate-950 border-t border-slate-800 mt-20 py-6">
      <div class="max-w-5xl mx-auto px-6">
        <!-- Mobile: stacked, Desktop: single row -->
        <div
          class="flex flex-col sm:flex-row items-center justify-between gap-4 text-[11px] text-slate-500"
        >
          <a
            href="/"
            class="flex items-center gap-1.5 font-bold text-slate-300 hover:text-white transition-colors"
          >
            <img src="/favicon.svg" alt="Logo" class="w-4 h-4 opacity-70" />
            Precio<span class="text-amber-400">Luz</span>Hora.online
          </a>

          <!-- Legal links (se colapsan en dos líneas si es necesario) -->
          <nav
            class="flex flex-wrap justify-center sm:justify-end items-center gap-x-4 gap-y-2 font-medium"
          >
            <a href="/privacidad" class="hover:text-slate-300 transition-colors"
              >Privacidad</a
            >
            <a href="/cookies" class="hover:text-slate-300 transition-colors"
              >Cookies</a
            >
            <a href="/terminos" class="hover:text-slate-300 transition-colors"
              >T&eacute;rminos</a
            >
            <span class="text-slate-700 hidden sm:inline">·</span>
            <a
              href="https://www.ree.es/es/datos/apidatos"
              target="_blank"
              class="hover:text-slate-300 transition-colors">Datos: REE</a
            >
            <span class="text-slate-700 hidden sm:inline">·</span>
            <a
              href="https://memento-academy.com/"
              target="_blank"
              class="text-fuchsia-500 hover:text-fuchsia-400 transition-colors"
              >Memento Academy</a
            >
          </nav>
        </div>
      </div>
    </footer>
  </body>
</html>
