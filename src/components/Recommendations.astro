---
/* src/components/Recommendations.astro */
import {
  CheckCircle2,
  AlertTriangle,
  Lightbulb,
  Zap,
  Sun,
  Laptop,
} from "lucide-react";
import type { PriceInfo } from "../lib/service";

interface Props {
  prices: PriceInfo[];
}

const { prices } = Astro.props;

let bestBlock = { start: "", avg: 999 };
for (let i = 0; i < prices.length - 2; i++) {
  const avg = (prices[i].price + prices[i + 1].price + prices[i + 2].price) / 3;
  if (avg < bestBlock.avg) {
    bestBlock = { start: prices[i].hour.split("-")[0], avg };
  }
}

const cheapest = prices.reduce(
  (min, p) => (p.price < min.price ? p : min),
  prices[0],
);
const expensive = prices.reduce(
  (max, p) => (p.price > max.price ? p : max),
  prices[0],
);
const avgPrice = prices.reduce((sum, p) => sum + p.price, 0) / prices.length;
---

<section id="ahorro" class="mt-32 relative">
  <!-- Dynamic Background Element -->
  <div
    class="absolute -top-24 -right-24 w-64 h-64 bg-primary/10 blur-[100px] rounded-full -z-10"
  >
  </div>

  <div class="flex flex-col items-center text-center mb-16">
    <div
      class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-amber-500/10 text-amber-600 text-[10px] font-black uppercase tracking-[0.2em] mb-6 border border-amber-200/50"
    >
      <Lightbulb size={12} /> Consejos de Ahorro
    </div>
    <h2
      class="text-4xl font-black text-slate-900 tracking-tight font-['Outfit'] sm:text-5xl"
    >
      ¿Cómo ahorrar <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-600"
        >teletrabajando</span
      >?
    </h2>
    <p class="text-slate-500 mt-4 font-medium text-lg max-w-xl">
      Estrategias inteligentes calculadas en tiempo real según el mercado
      eléctrico.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Card: Grandes Gastos -->
    <div
      class="glass p-10 rounded-[3rem] card-hover flex flex-col items-center text-center group"
    >
      <div
        class="p-5 bg-gradient-to-br from-amber-400 to-orange-500 rounded-3xl text-white mb-8 shadow-lg shadow-amber-500/20 group-hover:scale-110 transition-transform duration-500"
      >
        <Sun size={28} strokeWidth={2.5} />
      </div>
      <h3 class="text-2xl font-extrabold text-slate-900 mb-4 font-['Outfit']">
        Electrodomésticos Pro
      </h3>
      <p class="text-slate-500 leading-relaxed font-medium">
        Aprovecha la ventana de las <span
          class="text-primary font-black text-lg bg-amber-50 px-2 py-0.5 rounded-lg"
          >{cheapest.hour}</span
        > para lavadoras o lavavajillas. Es el punto de <span
          class="text-slate-900 font-bold">máximo ahorro</span
        > de hoy.
      </p>
    </div>

    <!-- Card: Oficina en casa -->
    <div
      class="glass p-10 rounded-[3rem] card-hover flex flex-col items-center text-center group"
    >
      <div
        class="p-5 bg-gradient-to-br from-slate-700 to-slate-900 rounded-3xl text-white mb-8 shadow-lg shadow-slate-900/20 group-hover:scale-110 transition-transform duration-500"
      >
        <Laptop size={28} strokeWidth={2.5} />
      </div>
      <h3 class="text-2xl font-extrabold text-slate-900 mb-4 font-['Outfit']">
        Smart Office
      </h3>
      <p class="text-slate-500 leading-relaxed font-medium">
        Con un precio medio de <span class="text-slate-900 font-black"
          >{avgPrice.toFixed(4)} €/kWh</span
        >, hoy es un día óptimo para mantener tus equipos activos tras el pico
        matinal.
      </p>
    </div>
  </div>

  <!-- Alerta: Hora Punta -->
  <div
    class="mt-12 glass p-8 rounded-[2.5rem] flex flex-col sm:flex-row items-center gap-8 text-center sm:text-left border-rose-200/50 hover:shadow-rose-500/5 transition-all duration-500 overflow-hidden relative"
  >
    <div class="absolute top-0 right-0 w-32 h-32 bg-rose-500/5 blur-3xl -z-10">
    </div>
    <div
      class="p-5 bg-rose-500/10 rounded-3xl text-rose-500 ring-1 ring-rose-200"
    >
      <AlertTriangle size={28} />
    </div>
    <div>
      <h3
        class="text-xl font-black text-slate-900 mb-2 font-['Outfit'] flex items-center gap-2 justify-center sm:justify-start"
      >
        Zona Crítica <span
          class="inline-block w-2 h-2 bg-rose-500 rounded-full animate-pulse"
        ></span>
      </h3>
      <p class="text-slate-500 font-medium">
        Evita el consumo intensivo a las <span
          class="text-rose-600 font-black text-lg">{expensive.hour}</span
        >. Es el tramo con <span
          class="bg-rose-50 text-rose-700 px-2 py-0.5 rounded-md font-bold text-xs uppercase tracking-wider"
          >Mayor Coste</span
        >.
      </p>
    </div>
  </div>
</section>
